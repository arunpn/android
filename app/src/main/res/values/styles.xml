<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/action_bar_background</item>
        <item name="android:textColor">@color/action_bar_foreground</item>
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/action_bar_background</item>
        <item name="colorPrimaryDark">@color/status_bar_background</item>
        <item name="colorAccent">@color/action_bar_background</item>
        <item name="android:windowBackground">@color/action_bar_foreground</item>
    </style>

    <style name="HeaderTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
